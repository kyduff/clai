FROM ubuntu:18.04

RUN apt-get update && apt-get install -y curl

ENV LANG C.UTF-8

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip

RUN python3 -m pip --no-cache-dir install --upgrade \
    pip \
    setuptools

RUN mkdir basheval
ENV HOME=/basheval
ENV SHELL=/bin/bash
WORKDIR /basheval

COPY bashlint /basheval/
COPY metric /basheval/
COPY requirements.txt /basheval/

RUN python3 -m pip --no-cache-dir install --upgrade -r /basheval/requirements.txt

CMD ["/bin/bash"]